bindsym --locked XF86AudioRaiseVolume exec volumectl -u +
bindsym --locked XF86AudioLowerVolume exec volumectl -u -
bindsym --locked XF86AudioMute exec volumectl %
bindsym --locked XF86AudioMicMute exec volumectl -m %
bindsym --locked XF86MonBrightnessDown exec lightctl -
bindsym --locked XF86MonBrightnessUp exec lightctl +
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous

